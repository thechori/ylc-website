        <!-- Main links -->
        <div id="left-links" class="col-xs-6 col-lg-3">
          .col-xs-6 .col-lg-3
        </div>
        <div id="logo" class="col-xs-12 col-lg-6">
          .col-xs-12 .col-lg-6
        </div>
        <div id="right-links" class="col-xs-6 col-lg-3">
          .col-xs-6 .col-lg-3
        </div>

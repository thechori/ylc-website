{<body}
<div class='container-fluid text-center'>

  <!-- TODO: Insert image slider -->
  <img src='images/carousel/02_cropped.jpg' class='carousel-img' />

  <section id="news">
    <div class="container">
      <h3>News</h3>
      <ul>
      {#posts}
        <li>
          <h3>{.title}</h3>
          {.body}<br>
          {.author}<br>
          {.createdAt}
        </li>
      {/posts}
      </ul>
    </div>
  </section>

  <section id="events">
    <div class="container">
      <h3>Events</h3>
      <p>Some information about events</p>
      <p>Some information about events</p>
      <p>Some information about events</p>
      <p>Some information about events</p>
    </div>
